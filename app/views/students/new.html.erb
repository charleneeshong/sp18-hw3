<%= form_tag students_path do %>
  <%= label_tag(:first_name, "First Name") %>
  <%= text_field_tag(:first_name, nil, placeholder: @placeholder_fname) %>
  <p>

  <%= label_tag(:last_name, "Last Name") %>
  <%= text_field_tag(:last_name, nil, placeholder: @placeholder_lname) %>
  <p>

  <%= label_tag(:wyr, "Would you rather randomly time travel +/- 20 years every time you fart or teleport to a different place on earth (on land, not water) every time you sneeze?") %>
  <%= text_field_tag(:wyr, nil, placeholder: @placeholder_wyr) %>
  <p>

  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  <p>
    
  <%= submit_tag("Create Student") %>
<% end %>